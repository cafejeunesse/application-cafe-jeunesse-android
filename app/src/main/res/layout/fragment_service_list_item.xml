<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="?android:dividerVertical"
    android:orientation="horizontal"
    android:showDividers="middle"
    android:background="@drawable/background_color_selector">

    <TextView
        android:id="@+id/service_name"
        style="?android:textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:textColor="@color/news_title"
        android:textStyle="bold"
        android:ellipsize="end"
        android:text="@string/service_name"/>

    <TextView
        android:id="@+id/service_information"
        style="?android:textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/service_name"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/news_subtitle"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="@string/description_exerp"/>

